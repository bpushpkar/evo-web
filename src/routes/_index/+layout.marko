    <html-script
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-9HQJ5CWCJZ"/>
    <script>
      (window.dataLayer ||= []).push(
        ["js", new Date()],
        ["config", "G-9HQJ5CWCJZ"],
      );
    </script>
  </head>
  <body class="evo-theme">
    <master-icons/>
    <site-header/>
    <navrail page=page>
      <${input.content}/>
    </navrail>
    <site-footer/>
  </body>
</html>

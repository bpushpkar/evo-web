{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["dom", "es2020", "dom.iterable"],
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": true,
    "noImplicitThis": true,
    "types": ["vite/client"],
    "alwaysStrict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src", "./src/**/*.json", "./src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
